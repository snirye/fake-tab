{
  "manifest_version": 3,
  "name": "Fake Tab - Embarrassing Titles",
  "version": "1.0.1",
  "description": "Create tabs with custom embarrassing titles for fun during screen sharing",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Fake Tab",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["fake_page.html", "fake_page.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
